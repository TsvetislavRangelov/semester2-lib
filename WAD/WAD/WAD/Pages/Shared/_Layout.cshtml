<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WAD</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /-->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="flex-container" id="navbar">
        <div>
            <img class="logo-element" src="~/img/books.png" alt=""> <!--THIS IMAGE IS A PLACEHOLDER-->
        </div>
        <div class="home-button">
            <h1><a asp-page="/Index">DigiLib</a></h1>
        </div>
        <div>
            <input type="text" placeholder="Search">
        </div>
        <div class="library-element">
            <a asp-page="/Library">Library</a>
        </div>
        <div>
            <a href="authors.html">Authors</a>
        </div>
        <div>
            <a href="reviews.html">Reviews</a>
        </div>
        <div>
            <a href="register.html">Register</a>
        </div>
        <div>
            <a href="login.html">Log In</a>
        </div>

    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DigiLib - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!---<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
